<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CorePrimaryButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/buttonColorPrimary</item>
        <item name="colorControlHighlight">@color/buttonColorSecondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CoreSecondaryButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/buttonColorSecondary</item>
        <item name="colorControlHighlight">@color/buttonColorSecondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
